<Window x:Class="Presentation.WebApp_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.WebApp_2"
        mc:Ignorable="d"
        Title="Product Application" 
        Height="700" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        WindowStyle="SingleBorderWindow" 
        Background="Transparent"
        
          
   



    >


  

    <Border CornerRadius="20" Background="#AABBCC" BorderBrush="#88BBBB" BorderThickness="10" >

        <Grid Margin="10">

           
                        
                        
                

  


                    <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            

            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <Label Content="Product Name" FontWeight="DemiBold" Margin="0,0,10,0"/>
                <TextBox x:Name="Txt_Name" Width="150" Margin="0,0,10,0"/>
                <Label Content="Product Price" FontWeight="DemiBold" Margin="0,0,10,0"/>
                <TextBox x:Name="Txt_Price" Width="150" Margin="0,0,10,0"/>
                <Button Content="Add" FontWeight="Bold" BorderBrush="#88BBBB" BorderThickness="5" Margin="0,10,0,0" Width="80" Click="Btn_Add_Click"/>
                <Button Content="View" FontWeight="Bold" BorderBrush="#88BBBB" BorderThickness="5" Margin="0,10,0,0" Width="80" Click="Btn_ViewList_Click"/>
                <Button Content="Clear"  FontWeight="Bold" BorderBrush="#88BBBB" BorderThickness="5"  Margin="0,10,0,0" Width="80" Click="Button_Click"
                    />
                <Button Content="Delete" FontWeight="Bold" BorderBrush="#88BBBB" BorderThickness="5"  Grid.Row="3" Margin="0,10,0,0" Width="80" Click="Btn_Delete_Click"
          />

            </StackPanel>

            <ListBox x:Name="ProductList" Grid.Row="1" Height="400"/>






        </Grid>
    

    </Border>

    

</Window>
