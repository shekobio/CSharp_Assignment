<Window x:Class="Presentation.WebApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.WebApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="937" Width="910">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Product Name:"/>
            <TextBox x:Name="ProductName" Margin="0,5,0,5"/>
            <Label Content="Product Price:"/>
            <TextBox x:Name="ProductPrice" Margin="0,5,0,5"/>
            <Button x:Name="AddProduduct" Content="Add Product" Padding="5" Click ="AddProduct_Click"/>
            <Button x:Name="Deleteproduct" Content="Delete Product" Click="Deleteproduct_Click"/>
        </StackPanel>


        <ListView x:Name="ProductList" Grid.Row="1" Margin="0,30,10,40">

        </ListView>
    </Grid>


</Window>
        
        
    



   



      
    
  
    